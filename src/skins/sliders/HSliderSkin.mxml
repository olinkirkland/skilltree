<?xml version="1.0" encoding="utf-8"?>

<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
             xmlns:s="library://ns.adobe.com/flex/spark"
             minWidth="10">

    <fx:Metadata>
		<![CDATA[
        [HostComponent("spark.components.HSlider")]
        ]]>
	</fx:Metadata>

    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
        <s:State name="inactive" />
    </s:states>

    <s:VGroup width="100%"
              height="40"
              verticalAlign="middle">
        <s:Button id="track"
                  height="8"
                  width="100%"
                  styleName="slider"
                  skinClass="skins.sliders.HSliderTrackSkin" />
    </s:VGroup>

    <s:VGroup width="100%"
              height="40"
              verticalAlign="middle">
        <s:Button id="thumb"
                  styleName="slider"
                  skinClass="skins.sliders.HSliderThumbSkin" />
    </s:VGroup>

</s:SparkSkin>