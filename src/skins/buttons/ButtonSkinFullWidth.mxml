<?xml version="1.0" encoding="utf-8"?>

<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
                   xmlns:s="library://ns.adobe.com/flex/spark"
                   xmlns:ui="ui.*"
                   creationComplete="onCreationComplete(event)"
                   autoIconManagement="false"
                   width="100%">

    <fx:Metadata>
		<![CDATA[
        [HostComponent("spark.components.Button")]
        ]]>
	</fx:Metadata>

    <fx:Script><![CDATA[
        import global.Color;

        import mx.events.FlexEvent;

        private function onCreationComplete(event:FlexEvent):void
        {
//            var t:ColorTransform = iconDisplay.transform.colorTransform;
//            t.color = Color.darkBody;
//            iconDisplay.transform.colorTransform = t;

            if (Label(labelDisplay).text.length == 0)
                Label(labelDisplay).includeInLayout = false;
        }
        ]]></fx:Script>

    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
        <s:State name="down" />
        <s:State name="over" />
        <s:State name="up" />
    </s:states>

    <s:Group height="30"
             width="100%">

        <s:Rect width="100%"
                height="100%"
                radiusX="3"
                radiusY="3">
            <s:fill>
                <s:SolidColor id="color"
                              color="{Color.primary}"
                              alpha.normal="1"
                              alpha.disabled=".5" />
            </s:fill>
        </s:Rect>

        <s:Rect width="100%"
                height="100%"
                radiusX="3"
                radiusY="3">
            <s:fill>
                <s:SolidColor color="{Color.black}"
                              alpha.normal="0.05"
                              alpha.disabled="0"
                              alpha.up="0.05"
                              alpha.over="0"
                              alpha.down=".2" />
            </s:fill>
        </s:Rect>

        <s:HGroup width="100%"
                  height="100%"
                  padding="5"
                  paddingLeft="10"
                  paddingRight="10"
                  verticalAlign="middle"
                  gap="5">

            <s:BitmapImage id="iconDisplay"
                           includeInLayout="{iconDisplay.source}"
                           width="16"
                           height="16"
                           smooth="true" />

            <ui:VerticalDivider includeInLayout="{iconDisplay.source}" />

            <s:Label id="labelDisplay"
                     width="100%"
                     maxDisplayedLines="1"
                     showTruncationTip="true"/>

        </s:HGroup>

    </s:Group>

</s:SparkButtonSkin>